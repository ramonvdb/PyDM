<OrderWindow>:
	id: main_win
	orientation: "vertical"
	spacing: 10
	space_x: self.size[0]/4
	canvas.before:
		Color:
			rgba: (1, 1, 1, 1)
		Rectangle:
			size: self.size
			pos: self.pos	

	BoxLayout:
		size_hint_y: None
		height: 50
		canvas.before:
			Color:
				rgba: (.06, .45, .45, 1)
			Rectangle:
				size: self.size
				pos: self.pos
		Label:
			text: "Opleveren werktekeningen"
			bold: True
			font_size: 18

	GridLayout:
		cols: 1
		padding: main_win.space_x, 30
		
		Label:
			text: "Order nummer"
			text_size: self.size
			halign: "center"
			valign: "center"
			color: 0, 0, 0, 1
			font_size: 20
			padding: mm(0), mm(2)
			size_hint_y: None
			height: 30
			
		TextInput:
			id: order_number 
			multiline: False
			font_size: 20
			size_hint_y: None
			height: 38
			focus: True

		Label:
			text: "Voorbeeld: 045580-1"
			text_size: self.size
			halign: "left"
			valign: "top"
			color: 0, 0, 0, .4
			font_size: 12
			italic: True
			padding: mm(0), mm(1)
			size_hint_y: None
			height: 45

		Button:
			id: ok_button
			text: "OK"
			size_hint_y: None
			height:40
			background_color: (.06, .45, .45, 1)
			background_normal: ""
			on_press: root.button_clicked()
